# === CONFIGURACION GENERAL ===
# Puerto del backend
PORT=3001

# Nombre del sistema
SYSTEM_NAME=Nubrik

# URL del frontend (para CORS y redirecciones)
FRONTEND_URL=http://localhost:5173

# URL de la API para el frontend
FRONTEND_API_URL=http://localhost:3001

# === SEGURIDAD ===
# Semilla para JWT (cambiar en producción)
JWT_SEED=your-secret-jwt-seed-here

# === BASE DE DATOS ===
# Desarrollo: usa 'database' como host (nombre del servicio Docker)
# Producción: usa el host real de tu base de datos
DB_HOST=database
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=my_database_pg

# === CORREO ELECTRONICO (SMTP) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# === GOOGLE OAUTH (Opcional) ===
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# === DOCKER REGISTRY (Solo para producción) ===
# Si usas un registry privado, configuralo aquí
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=luisberrezueta
VERSION=latest